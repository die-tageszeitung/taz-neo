<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:key="text"
            app:title="text">

        <Preference
                app:key="text_font_size23"
                app:title="Font size"
                app:defaultValue="20"
                android:layout="@layout/custom_preference_font_size"
                />

        <SwitchPreferenceCompat
                app:key="text_epaper"
                android:layout="@layout/custom_preference_switch"
                app:title="Always read as ePaper"/>

        <SwitchPreferenceCompat
                app:key="text_tap_on_edge"
                app:title="Enable tap on the edge"/>
    </PreferenceCategory>

    <PreferenceCategory
            app:key="account"
            app:title="account">

        <EditTextPreference
            app:key="account_abo_id"
            app:title="Abo ID"
            app:selectable="false"/>

        <EditTextPreference
                app:key="account_password"
                app:title="Password"
                app:selectable="false"/>

        <EditTextPreference
                app:key="account_status"
                app:title="Status"
                app:selectable="false"/>

        <Preference
                app:key="manage_account_button"
                app:title="manage account"
                android:layout="@layout/custom_preference_manage_account">
            <intent
                    android:targetPackage="de.taz.app.android.ui.login"
                    android:targetClass="de.taz.app.android.ui.login.LoginFragment"
                    />
        </Preference>

    </PreferenceCategory>
</PreferenceScreen>