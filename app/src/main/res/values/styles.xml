<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#0F000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:buttonStyle">@style/AppTheme.NoActionBar.ButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/tazRed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <style name="TextAppearance.Drawer.Header.Title" parent="TextAppearance.Drawer.Sections">
        <item name="android:textColor">@color/navigation_drawer_header_title</item>
    </style>

    <style name="TextAppearance.Fragment.Header.Default.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">32.5sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Fragment.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Fragment.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Drawer.Sections" parent="TextAppearance.Fragment.Title">
        <item name="android:textColor">@color/drawer_sections_item</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="TextAppearance.Header.Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.Header.Article.Num" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Header.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Archive.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Archive.Header.Icon" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
