<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/tazRed</item>
        <item name="colorButtonNormal">@color/tazRed</item>
        <item name="android:colorButtonNormal">@color/tazRed</item>
        <item name="materialButtonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="materialButtonOutlinedStyle">@style/AppTheme.ButtonStyle.Outlined</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#0F000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorAccent</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="colorButtonNormal">@color/tazRed</item>
        <item name="android:colorButtonNormal">@color/tazRed</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/textColorAccent</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_stroke</item>
        <item name="boxBackgroundColor">@color/backgroundColor</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <style name="TextAppearance.Drawer.Header.Title" parent="TextAppearance.Drawer.Sections">
        <item name="android:textColor">@color/navigation_drawer_header_title</item>
    </style>

    <style name="TextAppearance.Fragment.Header.Default.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize" tools:ignore="SpUsage">32.5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Fragment.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Fragment.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Drawer.Sections.Date" parent="TextAppearance.Fragment.Title">
        <item name="android:textColor">@color/drawer_sections_date</item>
        <item name="android:textSize" tools:ignore="SpUsage">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
    </style>

    <style name="TextAppearance.Drawer.Sections" parent="TextAppearance.Fragment.Title">
        <item name="android:fontFamily">@font/aktiv_grotesk_bold</item>
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="android:textColor">@color/textColorSection</item>
        <item name="android:minHeight">@dimen/fragment_drawer_sections_item_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="TextAppearance.Drawer.Sections.Imprint" parent="TextAppearance.Drawer.Sections">
        <item name="android:textColor">@color/drawer_sections_item</item>
    </style>

    <style name="TextAppearance.Header.Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_bold</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/fragment_header_section_text_size</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/fragment_header_section_text_size</item>
        <item name="autoSizeMinTextSize">2dp</item>
        <item name="autoSizeStepGranularity">0.1dp</item>
    </style>

    <style name="TextAppearance.Header.Article.Num" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="TextAppearance.Header.Article.Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Header.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/fragment_header_issue_date_text_size</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextAppearance.Archive.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
    </style>

    <style name="TextAppearance.Archive.Header.Icon" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Archive.NavigationEnd.Heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Archive.NavigationEnd.ListItem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.Dark" parent="Widget.Design.BottomNavigationView">
        <item name="colorControlHighlight">@color/black</item>
        <item name="backgroundTint">@color/navigation_bottom_background</item>
        <item name="android:backgroundTint">@color/navigation_bottom_background</item>
        <item name="colorButtonNormal">@color/tazRed</item>
        <item name="android:colorButtonNormal">@color/tazRed</item>
    </style>

    <style name="TextAppearance.BottomSheet.Setting" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/bottom_sheet_text_color</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet_setting_padding_vertical</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_setting_padding_vertical</item>
    </style>

    <style name="TextAppearance.BottomSheet.InfoText" parent="TextAppearance.BottomSheet.Setting">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.BottomSheet.TextSize.Decrease" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bottom_sheet_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.BottomSheet.TextSize.Increase" parent="TextAppearance.BottomSheet.TextSize.Decrease">
        <item name="android:textColor">@color/bottom_sheet_text_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.Settings.TextSize.Increase" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="android:textSize">@dimen/fragment_settings_text_font_size_increase_big_a</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">0sp</item>
    </style>

    <style name="TextAppearance.Settings.TextSize.Size" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">1sp</item>
    </style>

    <style name="TextAppearance.Settings.TextSize.Decrease" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="android:textSize">@dimen/fragment_settings_text_font_size_decrease_small_a
        </item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">2sp</item>
    </style>

    <style name="TextAppearance.Settings.Entry" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
        <item name="android:paddingTop">@dimen/fragment_settings_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_padding_bottom</item>
    </style>

    <style name="TextAppearance.Settings.Category" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_bold</item>
        <item name="android:paddingTop">@dimen/fragment_settings_category_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_category_padding_bottom</item>
    </style>

    <style name="TextAppearance.Settings.Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_bold</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Settings.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Bookmarks.Entry.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Bookmarks.Entry.Date" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/aktiv_grotesk_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Login.Link" parent="TextAppearance.Fragment.Title">
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="android:textColor">@color/tazRed</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="android:layout_marginTop">@dimen/fragment_login_text_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/fragment_login_text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/fragment_login_text_margin_horizontal</item>
    </style>

    <style name="TextAppearance.Login.Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/fragment_login_text_margin_top</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Login.Text.Link" parent="TextAppearance.Login.Text">
        <item name="android:layout_marginTop">@dimen/fragment_login_text_margin_top</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/tazRed</item>
        <item name="android:paddingBottom">@dimen/fragment_login_text_link_padding_bottom</item>
    </style>

</resources>
