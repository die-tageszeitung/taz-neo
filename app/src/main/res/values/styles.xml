<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/error</item>
        <item name="colorButtonNormal">@color/button</item>
        <item name="android:colorButtonNormal">@color/button</item>
        <item name="materialButtonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="materialButtonOutlinedStyle">@style/AppTheme.ButtonStyle.Outlined</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#0F000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorAccent</item>
        <item name="android:ambientShadowAlpha">0.1</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/AppTheme.MaterialAlertDialog.MaterialComponents</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog.MaterialComponents" parent="MaterialAlertDialog.MaterialComponents">
        <item name="backgroundInsetStart">10dp</item>
        <item name="backgroundInsetEnd">10dp</item>
        <item name="backgroundInsetTop">10dp</item>
        <item name="backgroundInsetBottom">10dp</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="fontFamily">@font/appFontRegular</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="colorButtonNormal">@color/button</item>
        <item name="android:colorButtonNormal">@color/button</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
    </style>

    <style name="AppTheme.ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/appFontBold</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/outline_button_ripple_color</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/textColorAccent</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_stroke</item>
        <item name="boxBackgroundColor">@color/backgroundColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_simple</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="TextAppearance.Fragment.Header.Default.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize" tools:ignore="SpUsage">32.5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Fragment.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Drawer.Sections.Date" parent="TextAppearance.Fragment.Title">
        <item name="android:textColor">@color/drawer_sections_date</item>
        <item name="android:textSize" tools:ignore="SpUsage">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
    </style>

    <style name="TextAppearance.Drawer.Sections" parent="TextAppearance.Fragment.Title">
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:textSize" tools:ignore="SpUsage">
            @dimen/fragment_drawer_sections_item_text_size
        </item>
        <item name="android:textColor">@color/textColorSection</item>
        <item name="android:maxLines">2</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="TextAppearance.Drawer.PDF.Sections" parent="TextAppearance.Drawer.Sections">
        <item name="android:textColor">@color/drawer_pdf_sections_text</item>
    </style>

    <style name="TextAppearance.Header.Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/fragment_header_section_text_size</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/fragment_header_section_text_size</item>
        <item name="autoSizeMinTextSize">2dp</item>
        <item name="autoSizeStepGranularity">0.1dp</item>
    </style>

    <style name="TextAppearance.Header.Article.Num" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/fragment_header_article_text_size</item>
    </style>

    <style name="TextAppearance.Header.Article.Section" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/fragment_header_article_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Header.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/fragment_header_issue_date_text_size</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextAppearance.Archive.NavigationEnd.Heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Archive.NavigationEnd.ListItem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/archive_navigation_end_list_item</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.Dark" parent="Widget.Design.BottomNavigationView">
        <item name="colorControlHighlight">@color/navigation_bottom_highlight</item>
        <item name="backgroundTint">@color/navigation_bottom_background</item>
        <item name="android:backgroundTint">@color/navigation_bottom_background</item>
        <item name="colorButtonNormal">@color/button</item>
        <item name="android:colorButtonNormal">@color/button</item>
    </style>

    <style name="TextAppearance.BottomSheet.Setting" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/bottom_sheet_text_color</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet_setting_padding_vertical</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_setting_padding_vertical</item>
    </style>

    <style name="TextAppearance.BottomSheet.TextSize.Decrease" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bottom_sheet_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.BottomSheet.TextSize.Increase" parent="TextAppearance.BottomSheet.TextSize.Decrease">
        <item name="android:textColor">@color/bottom_sheet_text_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.Settings.TextSize.Increase" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="android:textSize">@dimen/fragment_settings_text_font_size_increase_big_a</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="TextAppearance.Settings.TextSize.Size" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">1sp</item>
    </style>

    <style name="TextAppearance.Settings.TextSize.Decrease" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="firstBaselineToTopHeight">0dp</item>
        <item name="android:textSize">@dimen/fragment_settings_text_font_size_decrease_small_a
        </item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">2sp</item>
    </style>


    <style name="TextAppearance.Archive.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textSize">@dimen/text_appearance_archive_date_text_size</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
    </style>

    <style name="TextAppearance.CoverFlow.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textSize">@dimen/text_appearance_archive_date_text_size</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
    </style>

    <style name="TextAppearance.Settings.Entry" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/fragment_settings_text_font_size</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/fragment_settings_min_height</item>
        <item name="android:paddingTop">@dimen/fragment_settings_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_padding_bottom</item>
    </style>

    <style name="TextAppearance.Settings.Value" parent="TextAppearance.Settings.Entry">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/fragment_settings_value_font_size</item>
    </style>

    <style name="TextAppearance.Settings.Category" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:paddingTop">@dimen/fragment_settings_category_padding_top</item>
        <item name="android:paddingBottom">@dimen/fragment_settings_category_padding_bottom</item>
    </style>

    <style name="TextAppearance.Search.Category" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/search_advanced_text_size</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:paddingTop">@dimen/search_advanced_category_padding_top</item>
        <item name="android:layout_marginBottom">@dimen/search_advanced_category_margin_bottom</item>
    </style>

    <style name="TextAppearance.Search.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/search_input_field_margin_horizontally</item>
        <item name="android:layout_marginEnd">@dimen/search_input_field_margin_horizontally</item>
        <item name="android:layout_marginTop">@dimen/search_input_field_margin_top</item>
        <item name="boxBackgroundColor">@color/search_field_background_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/search_input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/search_input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/search_input_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/search_input_field_corner_radius</item>
        <item name="boxStrokeColor">@color/search_field_background_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
        <item name="startIconContentDescription">@string/search</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    <style name="TextAppearance.Bookmarks.Entry.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Bookmarks.Entry.Date" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Dialog.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="android:paddingBottom">9dp</item>
    </style>

    <style name="TextAppearance.Dialog.Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
    </style>


    <style name="TextAppearance.Login.Link" parent="TextAppearance.Fragment.Title">
        <item name="android:textSize" tools:ignore="SpUsage">23dp</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="android:paddingTop">@dimen/fragment_login_text_padding_vertical</item>
        <item name="android:layout_marginLeft">@dimen/fragment_login_text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/fragment_login_text_margin_horizontal</item>
        <item name="android:paddingBottom">@dimen/fragment_login_text_padding_vertical</item>
    </style>

    <style name="TextAppearance.Login.Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/fragment_login_text_padding_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Login.Text.Link" parent="TextAppearance.Login.Text">
        <item name="android:layout_marginTop">@dimen/fragment_login_text_padding_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/fragment_login_text_link_padding_bottom</item>
    </style>

</resources>
