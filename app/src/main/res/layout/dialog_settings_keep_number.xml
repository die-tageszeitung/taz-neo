<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="?dialogPreferredPadding"
        >

    <TextView
            android:id="@+id/settings_dialog_keep_number_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_general_keep_number_issue_title"
            style="@style/TextAppearance.Fragment.Title"
            app:layout_constraintTop_toTopOf="parent"
            android:labelFor="@id/dialog_settings_keep_number"
        />

    <EditText
            android:id="@+id/dialog_settings_keep_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/settings_dialog_keep_number_title"
            android:lines="1"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
        />

</androidx.constraintlayout.widget.ConstraintLayout>