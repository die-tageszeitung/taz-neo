<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_login_forgot_subscription_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_forgot_subscription_header"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_login_forgot_subscription_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/fragment_login_forgot_subscription_found"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_forgot_subscription_header" />

    <Button
        android:id="@+id/fragment_login_forgot_subscription_found_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/fragment_login_forgot_subscription_found_button"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_forgot_subscription_found" />

    <TextView
        android:id="@+id/fragment_login_forgot_subscription_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_forgot_subscription_request"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_forgot_subscription_found_button" />


    <Button
        android:id="@+id/fragment_login_forgot_subscription_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_forgot_subscription_request_button"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_forgot_subscription_request"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

