<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_cover_flow_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_cover_flow_empty_space_height_top"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_cover_flow_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingLeft="@dimen/fragment_cover_flow_grid_padding"
        android:paddingRight="@dimen/fragment_cover_flow_grid_padding"
        android:splitMotionEvents="true"
        app:layout_constraintBottom_toTopOf="@id/fragment_cover_flow_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_cover_flow_top" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_cover_flow_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_cover_flow_empty_space_height_bottom"
        android:layout_marginBottom="@dimen/nav_bottom_height"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/fragment_cover_flow_to_archive"
            android:paddingTop="@dimen/fragment_cover_flow_to_archive_padding_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_down" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>