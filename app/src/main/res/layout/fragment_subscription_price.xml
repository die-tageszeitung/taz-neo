<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_subscription_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_subscription_price_title"
        android:textAppearance="@style/TextAppearance.Fragment.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_subscription_price_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_subscription_price_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_subscription_price_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_subscription_price_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_subscription_price_description" />

    <Button
        android:id="@+id/fragment_subscription_address_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next_button"
        app:layout_constraintWidth="@dimen/button_max_width"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_subscription_price_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
