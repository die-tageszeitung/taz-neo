<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_corners"
        android:elevation="10dp">

    <TextView
            android:id="@+id/fragment_bottom_sheet_bookmarks_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextAppearance.BottomSheet.InfoText"
            android:text="@string/fragment_bottom_sheet_bookmarks_added"
            app:layout_constraintTop_toTopOf="parent" />


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGrey"
            android:paddingBottom="@dimen/bottom_sheet_setting_padding_vertical"
            app:layout_constraintTop_toBottomOf="@id/fragment_bottom_sheet_bookmarks_text" />

    <TextView
            android:id="@+id/fragment_bottom_sheet_bookmarks_add"
            style="@style/TextAppearance.BottomSheet.Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_bottom_sheet_bookmarks_remove_bookmark"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/fragment_bottom_sheet_bookmarks_text" />

    <TextView
            android:id="@+id/fragment_bottom_sheet_bookmarks_my_bookmarks"
            style="@style/TextAppearance.BottomSheet.Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_bottom_sheet_bookmarks_my_bookmarks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_bottom_sheet_bookmarks_add"
            android:gravity="center"
            />


</androidx.constraintlayout.widget.ConstraintLayout>

