<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/coach_mark_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:paddingStart="@dimen/coach_mark_text_layout_padding_start"
            android:paddingEnd="@dimen/coach_mark_text_layout_padding_end"
        android:rotation="-7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/coach_mark_max_width">

        <TextView
            android:id="@+id/coach_mark_header"
            style="@style/TextAppearance.CoachMark.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true"
            android:text="@string/coach_mark_section_drawer_bookmark_title"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_below="@id/coach_mark_header"
            android:layout_marginVertical="5dp"
            android:accessibilityTraversalAfter="@id/coach_mark_text"
            android:contentDescription="@string/coach_mark_article_bookmark_icon_content_description"
            android:src="@drawable/ic_bookmark"
            app:tint="@color/white"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/coach_mark_text"
            style="@style/TextAppearance.CoachMark.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:text="@string/coach_mark_section_drawer_bookmark_text" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
