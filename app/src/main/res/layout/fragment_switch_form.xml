<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:statusBarBackground="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_login_padding_top"
        android:layout_marginBottom="@dimen/fragment_login_padding_bottom"
        android:paddingHorizontal="@dimen/fragment_padding_horizontal">

        <TextView
            android:id="@+id/fragment_switch_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_switch_title"
            android:textAppearance="@style/TextAppearance.Settings.Category"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_switch_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_login_text_padding_vertical"
            android:text="@string/fragment_switch_description"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_email_aboID_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_description_input_margin"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_description">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_email_aboID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_email_aboID_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_surname" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_surname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_email_aboID_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_surname_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_first_name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_first_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_surname_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_first_name_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_address_street" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_address_street_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_first_name_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_address_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_address_street_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_address_city" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_address_city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_address_street_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_address_city_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_address_zipcode" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_address_zipcode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_address_city_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_address_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_address_zipcode_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_address_country" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_address_country_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_address_zipcode_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_address_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_address_country_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusForward="@id/fragment_switch_message" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_switch_message_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_address_country_layout">

            <de.taz.app.android.util.AppTextInputEditText
                android:id="@+id/fragment_switch_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_switch_message_title"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_switch_send_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_action_button_margin_vertical"
            android:text="@string/fragment_switch_send_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_switch_message_title_layout"
            app:layout_constraintWidth_max="@dimen/button_max_width" />

        <include
            android:id="@+id/loading_screen"
            layout="@layout/include_loading_screen"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>