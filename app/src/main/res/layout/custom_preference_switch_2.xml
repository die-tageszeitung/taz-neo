<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingStart="@dimen/fragment_settings_padding_horizontal"
        android:paddingEnd="@dimen/fragment_settings_padding_horizontal">

<!--  Overriding android ids results automatic persistence / setting of title -->
<TextView
        android:id="@android:id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settings_night_mode"
        android:textAppearance="@style/TextAppearance.Settings.Entry"
        android:paddingTop="@dimen/fragment_settings_padding_vertical"
        android:paddingBottom="@dimen/fragment_settings_padding_vertical"
        />

<Switch
        android:id="@+id/settings_night_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>
