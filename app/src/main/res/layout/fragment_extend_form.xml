<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/fragment_login_padding_to_navbar"
    app:statusBarBackground="@android:color/transparent">
    
    <TextView
        android:id="@+id/fragment_extend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_settings_category_padding_top"
        android:text="@string/fragment_extend_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Settings.Category" />

    <TextView
        android:id="@+id/fragment_extend_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_title"
        android:layout_marginTop="@dimen/fragment_login_text_padding_vertical"
        android:text="@string/fragment_extend_description"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/fragment_extend_email_aboID_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_description"
        android:layout_marginTop="@dimen/fragment_login_description_margin_bottom"
        android:labelFor="@id/fragment_extend_email_aboID"
        android:text="@string/fragment_extend_email_aboID_title" />

    <EditText
        android:id="@+id/fragment_extend_email_aboID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_email_aboID_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_surname" />

    <TextView
        android:id="@+id/fragment_extend_surname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_email_aboID"
        android:labelFor="@id/fragment_extend_surname"
        android:text="@string/fragment_extend_surname_title" />

    <EditText
        android:id="@+id/fragment_extend_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_surname_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_first_name" />

    <TextView
        android:id="@+id/fragment_extend_first_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_surname"
        android:labelFor="@id/fragment_extend_first_name"
        android:text="@string/fragment_extend_first_name_title" />

    <EditText
        android:id="@+id/fragment_extend_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_first_name_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_address_street" />

    <TextView
        android:id="@+id/fragment_extend_address_street_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_first_name"
        android:labelFor="@id/fragment_extend_address_street"
        android:text="@string/fragment_extend_address_street_title" />

    <EditText
        android:id="@+id/fragment_extend_address_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_street_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_address_city" />

    <TextView
        android:id="@+id/fragment_extend_address_city_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_street"
        android:labelFor="@id/fragment_extend_address_city"
        android:text="@string/fragment_extend_address_city_title" />

    <EditText
        android:id="@+id/fragment_extend_address_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_city_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_address_zipcode" />

    <TextView
        android:id="@+id/fragment_extend_address_zipcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_city"
        android:labelFor="@id/fragment_extend_address_zipcode"
        android:text="@string/fragment_extend_address_zipcode_title" />

    <EditText
        android:id="@+id/fragment_extend_address_zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_zipcode_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_address_country" />

    <TextView
        android:id="@+id/fragment_extend_address_country_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_zipcode"
        android:labelFor="@id/fragment_extend_address_country"
        android:text="@string/fragment_extend_address_country_title" />

    <EditText
        android:id="@+id/fragment_extend_address_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_country_title"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@id/fragment_extend_message" />

    <TextView
        android:id="@+id/fragment_extend_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_address_country"
        android:labelFor="@id/fragment_extend_message"
        android:text="@string/fragment_extend_message_title" />

    <EditText
        android:id="@+id/fragment_extend_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_message_title"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_extend_send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_extend_message"
        android:layout_marginTop="@dimen/login_button_margin_top"
        android:text="@string/fragment_extend_send_button" />

    <include
        android:id="@+id/loading_screen"
        layout="@layout/include_loading_screen"
        android:visibility="gone" />

</RelativeLayout>
