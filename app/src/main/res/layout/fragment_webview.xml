<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/web_view_wrapper"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/header_wrapper"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/web_view"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
                android:id="@+id/article_num"
                android:text="1/4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                app:layout_constraintRight_toRightOf="@id/section"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/TextAppearance.Header" />

        <TextView
                android:id="@+id/section"
                android:text="blabla"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/article_num"
                style="@style/TextAppearance.Header" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.taz.app.android.ui.webview.ArticleWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_wrapper"/>

</androidx.constraintlayout.widget.ConstraintLayout>