<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/fragment_header_article_margin_top"
        android:paddingBottom="@dimen/fragment_header_section_margin_bottom"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
            style="@style/TextAppearance.Header.Article.Num"
            android:id="@+id/article_num"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="viewEnd"
            android:layout_marginTop="@dimen/fragment_header_default_margin_top"
            android:layout_marginRight="@dimen/fragment_header_article_num_margin_horizontal"
            android:layout_marginLeft="@dimen/fragment_header_article_num_margin_horizontal"
            app:layout_constraintRight_toLeftOf="@id/section" />

    <TextView
            android:id="@+id/section"
            style="@style/TextAppearance.Header.Article.Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="viewEnd"
            android:layout_marginTop="@dimen/fragment_header_default_margin_top"
            app:layout_constraintRight_toRightOf="parent" />

    <ImageView tools:ignore="ContentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/section"
            app:srcCompat="@drawable/ic_dotted_line"
            />
</androidx.constraintlayout.widget.ConstraintLayout>

