<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rounded_corner_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@null"
        android:contentDescription="@string/button_close_text"
        android:paddingHorizontal="@dimen/bottom_sheet_round_padding_horizontal"
        android:paddingTop="@dimen/bottom_sheet_round_padding_top"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/bottom_sheet_round_padding_horizontal">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Dialog.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:text="@string/fragment_bottom_sheet_multi_column_mode_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/multi_column_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/bottom_sheet_round_padding_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_tap_to_scroll" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/bottom_sheet_round_padding_horizontal"
                android:layout_weight="1"
                android:text="@string/fragment_bottom_sheet_multi_column_mode_description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/bottom_sheet_round_padding_top"
            android:paddingBottom="30dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/negative_button"
                style="@style/AppTheme.ButtonStyle.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/bottom_sheet_round_padding_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_tap_to_scroll"
                android:text="@string/fragment_bottom_sheet_multi_column_mode_positive_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/positive_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/bottom_sheet_round_padding_horizontal"
                android:layout_weight="1"
                android:text="@string/fragment_bottom_sheet_multi_column_mode_negative_button" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>