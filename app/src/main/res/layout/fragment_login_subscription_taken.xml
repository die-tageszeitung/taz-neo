<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_login_subscription_taken_header"
        style="@style/TextAppearance.Login.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_subscription_taken_header"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_login_subscription_taken_retry"
        style="@style/Button.Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_subscription_taken_retry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_subscription_taken_header" />

    <TextView
        android:id="@+id/fragment_login_subscription_taken_body"
        style="@style/TextAppearance.Login.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_subscription_taken_body"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_subscription_taken_retry" />

    <TextView
        android:id="@+id/fragment_login_subscription_taken_email"
        style="@style/TextAppearance.Login.Text.Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/fragment_login_digiabo_mail_underlined"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_subscription_taken_body" />


</androidx.constraintlayout.widget.ConstraintLayout>

