<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rounded_corner_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:maxHeight="@dimen/match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/bottom_sheet_round_padding_horizontal"
        android:paddingTop="@dimen/bottom_sheet_round_padding_top"
        android:paddingBottom="@dimen/bottom_sheet_round_padding_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_bottom_sheet_notifications_title"
                style="@style/TextAppearance.Dialog.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_weight="1"
                android:text="@string/fragment_bottom_sheet_notifications_title" />

            <ImageView
                android:id="@+id/button_close"
                android:layout_width="@dimen/ic_close_button_size"
                android:layout_height="@dimen/ic_close_button_size"
                android:layout_gravity="top|end"
                android:layout_marginBottom="@dimen/ic_close_button_size"
                android:background="@drawable/ic_circle"
                android:backgroundTint="@color/backgroundColor"
                android:elevation="@dimen/ic_close_button_elevation"
                android:padding="@dimen/ic_close_button_padding"
                android:src="@drawable/ic_close"
                app:tint="@color/lightGrey" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_bottom_sheet_notifications_description"
            style="@style/TextAppearance.BottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_sheet_text_box_margin_bottom"
            android:text="@string/fragment_bottom_sheet_notifications_description" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_bottom_sheet_notifications_yes"
            style="@style/AppTheme.ButtonStyle.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_sheet_button_margin_bottom"
            android:text="@string/fragment_bottom_sheet_notifications_yes" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_bottom_sheet_notifications_no"
            style="@style/AppTheme.ButtonStyle.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_sheet_button_margin_bottom"
            android:text="@string/fragment_bottom_sheet_notifications_no" />

        <Button
            android:id="@+id/fragment_bottom_sheet_notifications_not_now"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_bottom_sheet_notifications_not_now"
            android:textColor="@color/textColor" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>