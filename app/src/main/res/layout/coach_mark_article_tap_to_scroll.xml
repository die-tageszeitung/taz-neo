<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/coach_mark_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/coach_mark_text_layout_margin_start"
            android:layout_marginEnd="@dimen/coach_mark_text_layout_margin_end"
            android:rotation="-7"
            app:layout_constraintBottom_toTopOf="@id/gesture_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_max="@dimen/coach_mark_max_width">

            <TextView
                android:id="@+id/coach_mark_header"
                style="@style/TextAppearance.CoachMark.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:accessibilityHeading="true"
                android:text="@string/coach_mark_article_tap_to_scroll_title"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/coach_mark_text"
                style="@style/TextAppearance.CoachMark.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coach_mark_header"
                android:text="@string/coach_mark_article_tap_to_scroll_text" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/gesture_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/coach_mark_article_tap_to_scroll_icon_content_description"
            android:src="@drawable/ic_article_tap_to_scroll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent
"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coach_mark_text_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>