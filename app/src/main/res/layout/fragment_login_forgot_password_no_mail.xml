<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_login_forgot_password_no_mail_body"
        style="@style/TextAppearance.Login.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_forgot_password_no_mail_body"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_login_forgot_password_no_mail_email"
        style="@style/TextAppearance.Login.Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_login_taz_mail"
        app:layout_constraintTop_toBottomOf="@id/fragment_login_forgot_password_no_mail_body" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_login_forgot_password_no_mail_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.ButtonStyle.Outlined"
        app:layout_constraintTop_toBottomOf="@id/fragment_login_forgot_password_no_mail_email"
        app:layout_constraintWidth="@dimen/button_max_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/cancel_button" />

</androidx.constraintlayout.widget.ConstraintLayout>

