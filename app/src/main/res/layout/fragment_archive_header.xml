<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_archive_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_archive_header_height"
        android:background="@color/fragment_archive_background"
        android:paddingLeft="@dimen/fragment_archive_header_padding"
        android:paddingRight="@dimen/fragment_archive_header_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_archive_header_icon_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/fragment_archive_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/fragment_archive_header_icon"
                android:tint="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_archive" />

        <TextView
                style="@style/TextAppearance.Archive.Header.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_archive_header_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_archive_header_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>