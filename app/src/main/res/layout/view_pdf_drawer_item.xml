<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fragment_drawer_thumbnail_margin"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_drawer_pdf_page_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/pdf_drawer_item_card_background"
        tools:layout_height="170dp"
        tools:layout_width="114dp"
        app:cardElevation="@dimen/moment_elevation">

        <ImageView
            android:id="@+id/view_drawer_pdf_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            tools:layout_height="170dp"
            tools:layout_width="114dp"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/view_drawer_pdf_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/fragment_drawer_thumbnail_margin"
        style="@style/TextAppearance.Drawer.PDF.Sections"
        android:textSize="@dimen/fragment_drawer_thumbnail_text_size"
        tools:text='Title of page'
        tools:textColor='@color/pdf_drawer_sections_item'/>

</LinearLayout>