<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="@dimen/fragment_drawer_thumbnail_margin"
    android:paddingTop="@dimen/fragment_drawer_pdf_item_padding_top"
    android:paddingEnd="@dimen/fragment_drawer_thumbnail_margin"
    tools:background="@color/navigation_drawer_pdf_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_drawer_pdf_page_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/pdf_drawer_item_card_background"
        tools:layout_height="170dp"
        tools:layout_width="114dp"
        app:cardElevation="@dimen/moment_elevation">

        <ImageView
            android:id="@+id/view_drawer_pdf_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            tools:layout_height="170dp"
            tools:layout_width="114dp"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/view_drawer_pdf_title"
        style="@style/Widget.App.Drawer.Pdf.Section.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_drawer_pdf_section_title_margin_top"
        tools:text="Title of page"
        tools:textColor="@color/pdf_drawer_sections_item" />

</LinearLayout>