<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/burger_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="@dimen/drawer_logo_translation_y"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/drawer_logo_corner_radius"
            app:cardElevation="@dimen/drawer_logo_elevation"
            app:cardUseCompatPadding="false"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/burger_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/tazRed"
                android:clickable="true"
                android:contentDescription="@string/navigation_drawer_close"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:scaleType="centerInside" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/feed_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/navigation_drawer_open"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:layout_marginStart="@dimen/drawer_logo_translation_x"
            android:translationY="@dimen/drawer_logo_translation_y"
            android:translationZ="100dp"
            app:layout_behavior="com.google.android.material.behavior.HideViewOnScrollBehavior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/webview_pager_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintBottom_toTopOf="@id/navigation_bottom_webview_pager"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation_bottom_webview_pager"
                style="@style/Widget.App.BottomNavigation.TabBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/section_pager_fab_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:contentDescription="@string/help"
            android:src="@drawable/ic_question_mark"
            app:backgroundTint="@color/fab_button_background"
            app:layout_behavior="com.google.android.material.behavior.HideViewOnScrollBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/lightGrey" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        android:id="@+id/loading_screen"
        layout="@layout/include_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>
