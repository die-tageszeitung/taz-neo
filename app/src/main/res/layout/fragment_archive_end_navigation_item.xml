<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_archive_header"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/fragment_archive_background"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="@dimen/fragment_archive_navigation_end_item_height" >

    <ImageView
            android:id="@+id/fragment_archive_navigation_end_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_circle"
            app:tint="@color/colorAccent"
            android:contentDescription="@string/fragment_archive_navigation_end_item_image_active"
        />

    <TextView
            android:layout_marginStart="@dimen/fragment_archive_navigation_end_item_text_margin_start"
            android:id="@+id/fragment_archive_navigation_end_item_text"
            style="@style/TextAppearance.Archive.NavigationEnd.ListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            app:layout_constraintStart_toEndOf="@id/fragment_archive_navigation_end_item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


</androidx.constraintlayout.widget.ConstraintLayout>