<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/continue_read_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@string/button_close_text"
        android:paddingStart="@dimen/bottom_sheet_continue_read_close_padding"
        android:paddingTop="@dimen/bottom_sheet_continue_read_close_padding"
        android:paddingEnd="@dimen/bottom_sheet_continue_read_close_padding"
        android:paddingBottom="@dimen/bottom_sheet_continue_read_close_padding_bottom"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/article_preview_image"
        android:layout_width="@dimen/bottom_sheet_continue_read_icon_size"
        android:layout_height="@dimen/bottom_sheet_continue_read_icon_size"
        android:layout_marginStart="@dimen/bottom_sheet_continue_read_margins"
        android:layout_marginTop="@dimen/bottom_sheet_continue_read_margins"
        android:contentDescription="@string/fragment_bottom_sheet_continue_read_article_preview_image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/page_preview_image"
        android:layout_width="@dimen/bottom_sheet_continue_read_icon_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottom_sheet_continue_read_margins"
        android:layout_marginVertical="@dimen/bottom_sheet_continue_read_margins"
        android:contentDescription="@string/fragment_bottom_sheet_continue_read_article_preview_image"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/image_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="article_preview_image, page_preview_image" />

    <TextView
        android:id="@+id/continue_read_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/bottom_sheet_continue_read_margins"
        android:fontFamily="@font/appFontRegular"
        android:includeFontPadding="false"
        android:text="@string/fragment_bottom_sheet_continue_read_title"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/image_barrier"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/continue_read_displayable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/bottom_sheet_continue_read_margins"
        android:fontFamily="@font/appFontBold"
        android:includeFontPadding="false"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/button_close"
        app:layout_constraintStart_toEndOf="@id/image_barrier"
        app:layout_constraintTop_toBottomOf="@id/continue_read_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="All Cops Are berufsunfÃ¤hig. It is a really really really long title..." />

</androidx.constraintlayout.widget.ConstraintLayout>