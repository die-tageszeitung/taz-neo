<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    app:statusBarBackground="@android:color/transparent"
    tools:context="de.taz.app.android.ui.main.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/webview_pager_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />

    <include
        android:id="@+id/loading_screen"
        layout="@layout/include_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="invisible" />


    <!-- This layout might always be made visible by the BottomNavigationBehavior when the user scrolls.  -->
    <LinearLayout
        android:id="@+id/navigation_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/navigation_bottom_background"
        android:orientation="vertical"
        tools:visibility="visible"
        app:layout_behavior="de.taz.app.android.util.BottomNavigationBehavior">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_bottom_height"
            style="@style/BottomNavigationToolBar"/>
    </LinearLayout>


    <!-- This layout is not always shown - its visibility is defined in code -
         but when it is shown it will draw over the navigation_bottom_layout -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bottom_webview_pager"
        style="@style/BottomNavigationTabBar"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="@dimen/nav_bottom_height" />

    <com.google.android.exoplayer2.ui.StyledPlayerControlView
        android:id="@+id/player_controller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/audio_player_bottom_height"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/nav_bottom_height"
        android:visibility="gone"
        app:buffered_color="@color/icon_tint"
        app:controller_layout_id="@layout/article_audio_player_exo_control_view"
        app:played_color="@color/icon_tint"
        app:scrubber_color="@color/icon_tint"
        app:scrubber_enabled_size="16dp"
        app:show_rewind_button="true"
        app:show_timeout="0"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
