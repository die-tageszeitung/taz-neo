<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/drawer_moment"
                android:layout_width="@dimen/drawer_moment_width"
                android:layout_height="@dimen/drawer_moment_height"
                android:contentDescription="@string/nav_header_desc" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/drawer_menu_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:context="de.taz.app.android.ui.drawer.sectionList.SectionDrawerFragment" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>