<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/navigation_pdf_drawer_grid_background">

    <include
        android:id="@+id/pdf_drawer_loading_screen"
        layout="@layout/include_loading_screen"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="invisible" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawer_pdf_layout_margin_top"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/drawer_padding_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_pdf_drawer_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_pdf_drawer_front_page_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/pdf_drawer_card_background"
                    app:cardElevation="@dimen/moment_elevation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.487"
                    tools:layout_height="166dp"
                    tools:layout_width="112dp">

                    <ImageView
                        android:id="@+id/activity_pdf_drawer_front_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:contentDescription="@string/fragment_drawer_moment_content_description"
                        android:focusable="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />
                <TextView
                    android:id="@+id/activity_pdf_drawer_date"
                    style="@style/Widget.App.Drawer.Pdf.Header.Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/fragment_drawer_thumbnail_margin"
                    app:layout_constraintStart_toEndOf="@id/activity_pdf_drawer_front_page_card"
                    app:layout_constraintTop_toTopOf="@id/activity_pdf_drawer_front_page_card"
                    tools:text="weekday,\nDD.MM.JJJJ" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/switch_drawer_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/fragment_drawer_body_pdf_with_sections_negative_margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/play_issue_layout"
                        app:layout_constraintStart_toStartOf="@id/guideline_mid">

                        <ImageView
                            android:id="@+id/switch_drawer_icon"
                            android:layout_width="@dimen/drawer_play_issue_big_icon_size"
                            android:layout_height="@dimen/drawer_play_issue_big_icon_size"
                            android:contentDescription="@string/fragment_drawer_switch_list_view"
                            android:src="@drawable/ic_list_icon"
                            app:layout_constraintBottom_toTopOf="@id/switch_drawer_icon_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:tint="@color/pdf_drawer_header_action" />

                        <TextView
                            android:id="@+id/switch_drawer_icon_text"
                            style="@style/Widget.App.Drawer.Pdf.Header.IconTexts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fragment_drawer_body_pdf_with_sections_small_margin"
                            android:text="@string/fragment_drawer_switch_list_view"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/play_issue_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/fragment_drawer_body_pdf_with_sections_negative_margin"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/switch_drawer_layout">

                        <ImageView
                            android:id="@+id/fragment_drawer_play_issue_icon"
                            android:layout_width="@dimen/drawer_play_issue_big_icon_size"
                            android:layout_height="@dimen/drawer_play_issue_big_icon_size"
                            android:contentDescription="@string/drawer_play_issue"
                            android:src="@drawable/ic_audio"
                            app:layout_constraintBottom_toTopOf="@id/fragment_drawer_play_issue_icon_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:tint="@color/pdf_drawer_header_action" />

                        <TextView
                            android:id="@+id/fragment_drawer_play_issue_icon_text"
                            style="@style/Widget.App.Drawer.Pdf.Header.IconTexts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fragment_drawer_body_pdf_with_sections_small_margin"
                            android:text="@string/drawer_play_issue"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/activity_pdf_drawer_front_page_title"
                style="@style/Widget.App.Drawer.Pdf.Header.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_drawer_thumbnail_margin"
                android:layout_marginTop="@dimen/fragment_drawer_pdf_section_title_margin_top"
                tools:text="title of 1st page" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/navigation_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/view_pdf_drawer_item"
                tools:spanCount="2" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>