<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/fragment_padding_horizontal"
    android:paddingEnd="@dimen/fragment_padding_horizontal"
    >

    <TextView
        android:id="@+id/fragment_article_read_ondescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_article_read_ondescription_margin_top"
        android:layout_marginBottom="@dimen/fragment_article_read_ondescription_margin_bottom"
        android:text="@string/fragment_article_read_onreadon"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_article_read_on_username_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/fragment_article_read_on_username"
        android:text="@string/login_username_title"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_article_read_ondescription" />

    <EditText
        android:id="@+id/fragment_article_read_on_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:hint="@string/login_username_hint"
        android:nextFocusForward="@id/fragment_article_read_on_password"
        app:layout_constraintTop_toBottomOf="@+id/fragment_article_read_on_username_title" />

    <TextView
        android:id="@+id/fragment_article_read_on_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/fragment_article_read_on_password"
        android:text="@string/login_password_title"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_article_read_on_username" />

    <EditText
        android:id="@+id/fragment_article_read_on_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_password_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/fragment_article_read_on_password_title" />

    <Button
        android:id="@+id/fragment_article_read_on_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_button_margin_top"
        android:text="@string/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_article_read_on_password" />
