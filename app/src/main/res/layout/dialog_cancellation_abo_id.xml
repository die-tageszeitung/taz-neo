<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="?dialogPreferredPadding">

    <TextView
        android:id="@+id/settings_dialog_cancellation_title"
        style="@style/TextAppearance.Settings.Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_dialog_cancellation_are_you_sure_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_dialog_cancellation_description"
        style="@style/TextAppearance.Settings.Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_dialog_cancellation_direct"
        app:layout_constraintTop_toBottomOf="@id/settings_dialog_cancellation_title" />
</androidx.constraintlayout.widget.ConstraintLayout>