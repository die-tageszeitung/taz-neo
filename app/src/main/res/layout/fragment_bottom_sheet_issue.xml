<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_sheet_background"
    android:elevation="10dp">

    <TextView
        android:id="@+id/fragment_bottom_sheet_issue_read"
        style="@style/TextAppearance.BottomSheet.Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_bottom_sheet_issue_read"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_bottom_sheet_issue_share"
        style="@style/TextAppearance.BottomSheet.Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_bottom_sheet_issue_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_bottom_sheet_issue_read"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


