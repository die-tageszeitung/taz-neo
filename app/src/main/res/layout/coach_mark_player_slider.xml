<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/coach_mark_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no" />

        <RelativeLayout
            android:id="@+id/coach_mark_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/coach_mark_text_layout_margin_start"
            android:layout_marginEnd="@dimen/coach_mark_text_layout_margin_end"
            android:rotation="-7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="@dimen/coach_mark_max_width">

            <TextView
                android:id="@+id/coach_mark_header"
                style="@style/TextAppearance.CoachMark.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityHeading="true"
                android:text="@string/coach_mark_player_slider_title"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/coach_mark_text"
                style="@style/TextAppearance.CoachMark.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coach_mark_header"
                android:text="@string/coach_mark_player_slider_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/coach_mark_icon_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.media3.ui.DefaultTimeBar
                    android:id="@+id/expanded_progress"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/audioplayer_expanded_progress_touch_target_height"
                    app:bar_height="@dimen/audioplayer_expanded_progress_bar_height"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:played_color="@color/audio_player_expanded_progress_played_color"
                    app:scrubber_color="@color/audio_player_expanded_progress_scrubber_color"
                    app:scrubber_dragged_size="@dimen/audioplayer_expanded_progress_scrubber_size"
                    app:scrubber_enabled_size="@dimen/audioplayer_expanded_progress_scrubber_size"
                    app:touch_target_height="@dimen/audioplayer_expanded_progress_touch_target_height"
                    app:unplayed_color="@color/audio_player_expanded_progress_unplayed_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>