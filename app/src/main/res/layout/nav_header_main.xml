<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:layout_constraintStart_toStartOf="parent" >


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@id/drawerMoment"
                app:layout_constraintRight_toRightOf="parent">

            <ImageView
                    android:id="@+id/drawerIconContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:tint="@color/tazRed"
                    android:contentDescription="@string/navigation_drawer_icon_content"
                    app:srcCompat="@drawable/ic_format_align_left" />

            <ImageView
                    android:id="@+id/drawerIconHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/darkGrey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/drawerIconContent"
                    app:layout_constraintRight_toLeftOf="@id/drawerIconFavorites"
                    android:contentDescription="@string/navigation_drawer_icon_home"
                    app:srcCompat="@drawable/ic_more_horiz" />

            <ImageView
                    android:id="@+id/drawerIconFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/drawerIconHome"
                    app:layout_constraintRight_toLeftOf="@id/drawerIconSettings"
                    android:contentDescription="@string/navigation_drawer_icon_favorites"
                    android:tint="@color/darkGrey"
                    app:srcCompat="@drawable/ic_star" />

            <ImageView
                    android:id="@+id/drawerIconSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:tint="@color/darkGrey"
                    android:contentDescription="@string/navigation_drawer_icon_settings"
                    app:srcCompat="@drawable/ic_settings" />


            <ImageView
                    android:id="@+id/drawerIconInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info_outline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/drawerIconSettings"
                    android:contentDescription="@string/navigation_drawer_icon_info"
                    android:tint="@color/darkGrey"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/drawerIconContent"
                    android:text="@string/navigation_drawer_icon_content"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ImageView
            android:id="@+id/drawerMoment"
            android:layout_width="@dimen/drawer_moment_width"
            android:layout_height="@dimen/drawer_moment_height"
            android:contentDescription="@string/nav_header_desc"
            android:layout_marginRight="@dimen/drawer_moment_margin_right"
            app:srcCompat="@mipmap/ic_launcher_round" />

</LinearLayout>
