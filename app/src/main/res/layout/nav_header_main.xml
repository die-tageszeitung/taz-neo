<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="@dimen/nav_header_vertical_spacing">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/drawer_moment"
            app:layout_constraintRight_toRightOf="parent">

        <ImageView
                android:id="@+id/drawer_icon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigation_drawer_icon_content"
                android:padding="@dimen/drawer_header_icon_padding"
                android:tint="@color/navigation_drawer_icon_selected"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_format_align_left" />

        <ImageView
                android:id="@+id/drawer_icon_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigation_drawer_icon_home"
                android:padding="@dimen/drawer_header_icon_padding"
                android:tint="@color/navigation_drawer_icon"
                app:layout_constraintLeft_toRightOf="@id/drawer_icon_content"
                app:layout_constraintRight_toLeftOf="@id/drawer_icon_bookmarks"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_home" />

        <ImageView
                android:id="@+id/drawer_icon_bookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigation_drawer_icon_bookmarks"
                android:padding="@dimen/drawer_header_icon_padding"
                android:tint="@color/navigation_drawer_icon"
                app:layout_constraintLeft_toRightOf="@+id/drawer_icon_home"
                app:layout_constraintRight_toLeftOf="@id/drawer_icon_settings"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_bookmark" />

        <ImageView
                android:id="@+id/drawer_icon_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigation_drawer_icon_settings"
                android:padding="@dimen/drawer_header_icon_padding"
                android:tint="@color/navigation_drawer_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_settings" />


        <ImageView
                android:id="@+id/drawer_icon_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/navigation_drawer_icon_help"
                android:padding="@dimen/drawer_header_icon_padding"
                android:tint="@color/navigation_drawer_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/ic_help" />

        <TextView
                android:id="@+id/drawer_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/drawer_header_icon_line_margin"
                android:padding="@dimen/drawer_header_icon_padding"
                android:text="@string/navigation_drawer_icon_content"
                android:textAppearance="@style/TextAppearance.Drawer.Header.Title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/drawer_icon_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
