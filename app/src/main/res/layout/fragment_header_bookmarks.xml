<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="@dimen/fragment_header_default_margin_bottom"
        android:layout_marginEnd="@dimen/fragment_header_default_margin_horizontal"
        android:layout_marginStart="@dimen/fragment_header_default_margin_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/fragment_header_bookmarks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_header_default_margin_top"
            android:text="@string/fragment_bookmarks_title"
            android:textAppearance="@style/TextAppearance.Fragment.Title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_header_bookmarks_title"
            app:srcCompat="@drawable/ic_dotted_line"
            tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>