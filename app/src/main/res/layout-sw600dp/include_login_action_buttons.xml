<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_login_action_cancel"
        style="@style/AppTheme.ButtonStyle.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_form_button_margin_top"
        android:text="@string/cancel_button"
        app:layout_constraintEnd_toStartOf="@id/fragment_login_action_positive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/button_max_width" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_login_action_positive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/login_horizontal_inner_min_margin"
        android:layout_marginTop="@dimen/login_form_button_margin_top"
        android:text="@string/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_login_action_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/button_max_width" />


</androidx.constraintlayout.widget.ConstraintLayout>