<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Archive.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/coverflow_text_color</item>
        <item name="android:lineSpacingExtra">32pt</item>
        <item name="android:textSize">@dimen/text_appearance_archive_date_text_size</item>
        <item name="android:fontFamily">@font/appFontRegular</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="fontFamily">@font/appFontBold</item>
        <item name="android:paddingTop">@dimen/button_custom_padding_to_center_aktiv_grotesk_font</item>
        <item name="android:includeFontPadding">false</item>
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="maxWidth">@dimen/button_max_width</item>
    </style>

    <style name="AppTheme.ButtonStyle.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/appFontBold</item>
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:paddingTop">@dimen/button_custom_padding_to_center_aktiv_grotesk_font</item>
        <item name="android:includeFontPadding">false</item>
        <item name="strokeColor">@color/buttonColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="rippleColor">@color/outline_button_ripple_color</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
    </style>

    <style name="TextAppearance.BottomSheet.TextSize.Description" parent="TextAppearance.Settings">
        <item name="android:layout_marginBottom">-10dp</item>
    </style>

    <style name="TextAppearance.BottomSheet.TextSize.IconText" parent="TextAppearance.IconText">
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>